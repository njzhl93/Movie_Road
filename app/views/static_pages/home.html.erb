<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
    </aside>
    <div class="span8">
      <h3>Comment Feed</h3>
      <%= render 'comments/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Movie Road</h1>
    <%= link_to image_tag("movie-road.png"), 'https://movie-road.herokuapp.com/' %>
    </br></br>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>